---
import BlogPost from '../components/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));

function compareDates(a: any, b: any) {
	return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
}
---

<BaseLayout pageTitle="Longest Path Search">
	<ul class="post-list">
		{allPosts.sort(compareDates).map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} />)}
	</ul>
</BaseLayout>